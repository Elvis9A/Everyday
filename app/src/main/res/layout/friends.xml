<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friends_top"
        android:background="@color/new_color"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="朋友"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:gravity="center_horizontal">

        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/friends_body"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/friends_top">

        <!--第一行-->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <!-- 褐色-->
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/sienna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/underline"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:autoLink="all">

                    </TextView>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/solid_nullbg"
                    android:text="我在每天的第一篇日记"
                    >

                </TextView>


            </LinearLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.5"
                android:text="2020.11.\n20\n周五"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <!-- 菊兰色-->
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/cornflowerblue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/underline"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:autoLink="all">

                    </TextView>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/solid_nullbg"
                    android:text="我在每天的第一篇日记"
                    >

                </TextView>


            </LinearLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.5"
                android:text="2020.11.\n20\n周五"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <!-- 绿色-->
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/underline"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:autoLink="all">

                    </TextView>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/solid_nullbg"
                    android:text="我在每天的第一篇日记"
                    >

                </TextView>


            </LinearLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.5"
                android:text="2020.11.\n20\n周五"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <!-- 橄榄色-->
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/olive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/underline"
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友4"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:autoLink="all">

                    </TextView>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/solid_nullbg"
                    android:text="我在每天的第一篇日记"
                    >

                </TextView>


            </LinearLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.5"
                android:text="2020.11.\n20\n周五"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@color/white_grey"
        android:layout_above="@+id/bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/friends_home"
                android:layout_centerInParent="true"
                android:background="@drawable/home"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/friends_friends"
                android:layout_centerInParent="true"
                android:background="@drawable/friends"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/friends_mine"
                android:layout_centerInParent="true"
                android:background="@drawable/mine"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_text"
        android:background="@color/white_grey"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_home"
                android:layout_centerInParent="true"
                android:text="日记"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_friends"
                android:layout_centerInParent="true"
                android:text="朋友"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_mine"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>