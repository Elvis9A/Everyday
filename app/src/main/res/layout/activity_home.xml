<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_above="@+id/home_bot"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:layout_marginBottom="10dp">-->

<!--    </Button>-->


    <TextView
        android:id="@+id/sb_start"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_above="@+id/play"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/seekBar" />


    <LinearLayout
        android:id="@+id/home_bot"
        android:background="@color/white_grey"
        android:layout_above="@+id/bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/home_home"
                android:layout_centerInParent="true"
                android:background="@drawable/home"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/home_friends"
                android:layout_centerInParent="true"
                android:background="@drawable/friends"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/home_mine"
                android:layout_centerInParent="true"
                android:background="@drawable/mine"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_text"
        android:background="@color/white_grey"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_home"
                android:layout_centerInParent="true"
                android:text="日记"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_friends"
                android:layout_centerInParent="true"
                android:text="朋友"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/text_mine"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>